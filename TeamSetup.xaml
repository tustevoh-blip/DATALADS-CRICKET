<Window x:Class="DATALADS_CRICKET.TeamSetup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Team Registration"
        Width="1100" Height="720"
        WindowStartupLocation="CenterScreen"
        Background="#111">
    <Window.Resources>
        <SolidColorBrush x:Key="Card" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="Ink"  Color="White"/>
        <SolidColorBrush x:Key="Accent" Color="#FFD700"/>

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Card}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,14"/>
            <Setter Property="BorderBrush" Value="#2B2B2B"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#222"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
        </Style>

        <Style x:Key="PrimaryBtn" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Setter Property="Foreground" Value="#111"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
        </Style>

        <Style x:Key="NeutralBtn" TargetType="Button">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Team Registration" FontSize="22" FontWeight="Bold"/>
            <TextBlock Text=" — enter team names and paste/type one player per line"
                       Foreground="#BDBDBD" Margin="6,6,0,0"/>
        </StackPanel>

        <!-- Two columns -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- TEAM A -->
            <Border Style="{StaticResource CardBorder}" Grid.Column="0" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="TEAM A" FontSize="16" FontWeight="Bold" Foreground="{StaticResource Accent}"/>

                    <StackPanel Grid.Row="1" Margin="0,8,0,8">
                        <TextBlock Text="Team A Name"/>
                        <TextBox x:Name="TxtTeamAName" Margin="0,4,0,0" TextChanged="PlayersA_TextChanged"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Players (one per line)" FontWeight="Bold"/>
                            <TextBlock Text="  •  " Foreground="#777"/>
                            <TextBlock Text="Count: "/>
                            <TextBlock x:Name="LblCountA" FontWeight="Bold" Foreground="{StaticResource Accent}" Text="0"/>
                        </StackPanel>

                        <TextBox x:Name="TxtPlayersA"
                                 Margin="0,6,0,0"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Height="420"
                                 TextChanged="PlayersA_TextChanged"
                                 FontFamily="Consolas"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- TEAM B -->
            <Border Style="{StaticResource CardBorder}" Grid.Column="1" Margin="8,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="TEAM B" FontSize="16" FontWeight="Bold" Foreground="{StaticResource Accent}"/>

                    <StackPanel Grid.Row="1" Margin="0,8,0,8">
                        <TextBlock Text="Team B Name"/>
                        <TextBox x:Name="TxtTeamBName" Margin="0,4,0,0" TextChanged="PlayersB_TextChanged"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Players (one per line)" FontWeight="Bold"/>
                            <TextBlock Text="  •  " Foreground="#777"/>
                            <TextBlock Text="Count: "/>
                            <TextBlock x:Name="LblCountB" FontWeight="Bold" Foreground="{StaticResource Accent}" Text="0"/>
                        </StackPanel>

                        <TextBox x:Name="TxtPlayersB"
                                 Margin="0,6,0,0"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Height="420"
                                 TextChanged="PlayersB_TextChanged"
                                 FontFamily="Consolas"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom bar -->
        <DockPanel Grid.Row="2" Margin="0,12,0,0">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                <Button x:Name="BtnNext" Content="Next →"
                        Style="{StaticResource PrimaryBtn}"
                        Click="BtnNext_Click"
                        IsEnabled="False"/>
                <Button Content="Cancel" Style="{StaticResource NeutralBtn}" Click="BtnCancel_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>


